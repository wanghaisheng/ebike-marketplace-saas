{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.runtime": "node",
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "search.exclude": {
        "**/.git": true,
        "**/.github": true,
        "**/.nuxt": true,
        "**/.output": true,
        "**/.pnpm": true,
        "**/.vscode": true,
        "**/.yarn": true,
        "**/bower_components": true,
        "**/dist/**": true,
        "**/logs": true,
        "**/node_modules": true,
        "**/out/**": true,
        "**/package-lock.json": true,
        "**/pnpm-lock.yaml": true,
        "**/tmp": true,
        "**/yarn.lock": true,
        "**/.next/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.next/**": true
    },
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "cSpell.words": ["Aggr", "aggs", "oneof", "Targabay", "Xata", "zoomable"],
    "prettier.tabWidth": 4,
    "prettier.printWidth": 150,
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.workingDirectories": ["apps/webapp", "apps/e2e-tests", "apps/email-mgr", "apps/sesrvice", "libs/infra/pulumi", "libs/protos"],
    "protoc": {
        "options": ["--proto_path=${workspaceRoot}/libs/protos/definitions"]
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "[proto3]": {
        "editor.defaultFormatter": "zxh404.vscode-proto3"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.watcherInclude": ["${workspaceRoot}/libs/protos/gen/**"],
    "editor.formatOnSave": true,
    "conventionalCommits.scopes": ["pulumi", "webapp", "api-service", "e2e-tests", "cron-job", "helm"],
    "go.delveConfig": {
        "debugAdapter": "legacy"
    }
}
