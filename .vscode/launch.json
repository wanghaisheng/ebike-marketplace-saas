    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go api service debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apps/api-service/cmd/main.go",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Go handle expired job debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apps/expire-listings-job/cmd/main.go",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Go subscriptions job debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apps/subscriptions-job/cmd/main.go",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": ["Daily"]
        },
        {
            "name": "Go notify review job debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apps/notify-review-job/cmd/main.go",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": ["Daily"]
        }
    ]
}
